<!DOCTYPE html>
<html>
  <head>
    <% include includepages/head.ejs %>
    <title>Login</title>
  </head>
  <body>

  <nav class="nav navbar-default nav-defn">
      <div class="container-fluid">
        <div class="navbar-header">
          <div class="heading">
            <h4>Writer Login</h4>
          </div>
        </div>
      </div>
    </nav>

  <h3>Login</h3>
<div class="signup">
  <div class="demo">
    
  </div>
  <% if(success_msg){ %>
    <div class='alert alert-success'><p><%= success_msg %></p></div>
  <% } %>
  <% if(error_msg){ %>
    <div class='alert alert-danger'><p><%= error_msg %></p></div>
  <% } %>
  <% if(error){ %>
    <div class='alert alert-danger'><p><%= error %></p></div>
  <% } %>
  <form name="login-form" method="POST" action="/admin" >
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="login_email" placeholder="you@example.com" required />
    </div>
    <div class='form-group'>
      <label>Password</label>
      <input type="password" name="login_pass" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-default">Login
      <span class="glyphicon glyphicon-send"></span>
    </button>

    <div class="reg-btn">
    <p>Don't have an account...</p>

    <a href="/admin/register">
      <input type="button" class="btn btn-default" value="Register" />
    </a>
    </div>

  </form>

  


</div>

  <script type="text/javascript" src="js/jquery-3.1.1.min.js"></script>
  <script type="text/javascript">
  </script>

</body>
</html>

          
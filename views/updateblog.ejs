<!DOCTYPE html>
<html>
  <head>
  	<% include includepages/head.ejs %>
    <title>Upload</title>
  </head>
<body>


<div class="upload-header">
	<h1>Hello <%= user.f_name %></h1>
	<a href="/admin/logout">
		<button type="button" class="btn btn-pills">
			<span class="glyphicon glyphicon-off"></span>
		</button>
	</a>
</div>

<div class="writer-sub">

	<p>Upload your piece here</p>
	<hr />

	<form method="POST" enctype="multipart/form-data">
	  <div class="form-group">
	    <label for="title">Title</label>
	    <input type="text" class="form-control" name="title" placeholder="title of blog" required />
	  </div>
	  <div class="form-group">
	    <label for="post">Blog Upload</label>
	    <input type="file" name="post" required />
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	</form>

  <% if(success_msg){ %>
    <div class='alert alert-success'><p><%= success_msg %></p></div>
  <% } %>
	<% if(errors){ %>
	  <% for(var err in errors){ %>
    	<div class='alert alert-danger'><p><%= errors[err].msg %></p></div>
      <% } %>
	<% } %>
</div>


</body>
</html>
